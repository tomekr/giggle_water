<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <form action="/bars/new" method="link">
      <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus" ></span> Create Bar
      </button>
    </form>
  </div>

  <div class="row">
    <h1>Listing Bars</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @bars.each do |bar| %>
          <tr>
            <td><%= bar.name %></td>
            <td><%= link_to 'Show', bar %></td>
            <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
            <td><%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Bar', new_bar_path %>
  </div>
</div>
