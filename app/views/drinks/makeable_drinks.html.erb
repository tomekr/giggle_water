<div class="container">
  <% if current_bar %>
    <% @drinks_missing_hash.each do |missing_count, drinks| %>
      <% if missing_count == 0 %>
        <div class="row">
          <h4>Drinks you can make</h4>
          <table class="table table-hover table-bordered">
            <thead>
              <th>Name</th>
            </thead>
            <tbody>
              <% drinks.each do |drink| %>
                <tr data-link="<%= drink_path(drink[:id]) %>">
                  <td><%= drink[:name] %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="row">
          <h4>Missing <%= missing_count %> <%= "Ingredient".pluralize(missing_count) %></h4>
          <table class="table table-hover table-bordered">
            <thead>
              <th>Name</th>
              <th>Missing Ingredients</th>
            </thead>
            <tbody>
              <% drinks.each do |drink| %>
                <tr data-link="<%= drink_path(drink[:id]) %>">
                  <td><%= drink[:name] %></td>
                  <td><%= drink[:missing_ingredients].map(&:name).join(', ') %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>It looks like you don't have any bars set. Go here to create and set your current bar <%= link_to "Your bars", bars_path %></p>
  <% end %>
</div>
