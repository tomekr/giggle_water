<div class="container">
  <div class="row">
    <h2>Listing Ingredients</h1>
    <table class="table-condensed table-hover table-bordered">
      <thead>
        <tr>
          <th></th>
          <th>Ingredient</th>
          <th># of Cocktails</th>
        </tr>
      </thead>

      <tbody>
        <% @ingredients.each do |ingredient| %>
          <tr>
            <td id="<%=ingredient.id%>">
              <% if current_user %>
                <%= render 'add_or_remove', ingredient: ingredient %>
              <% end %>
            </td>
            <td>
              <%= link_to ingredient.name, ingredient_path(ingredient) %>
            </td>
            <td><%= ingredient.drink_items_count %></td>

          </tr>
        <% end %>
      </tbody>
    </table>

    <p><%= paginate @ingredients %></p>
  </div>
</div>
